{
  "name": "autospace",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "libs/*"
    ],
    "nohoist": [
      "**/@nestjs",
      "**/@nestjs/**"
    ]
  },
  "scripts": {
    "format": "prettier  \"{apps,libs}/**/*.{ts,tsx,js,json}\" --ignore-path .gitignore",
    "format:check": "npm run format --check",
    "format:write": "npm run format --write",
    "tsc": "npx nx run-many -t tsc",
    "lint": "npx run nx run-many -t lint",
    "build": "npx run nx run-many -t build",
    "validate": "npm run format:write && npm run tsc && npm run lint && npm run build",
    "cloc": "npx cloc --exclude-dir=node_modules,dist,build,npm run.lock,package.json,generated.tsx,.next,.nx ."
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "prettier": "2.3.2",
    "typescript": "5.4.3",
    "husky": "8.0.0",
    "nx": "18.3.4"
  }
}
